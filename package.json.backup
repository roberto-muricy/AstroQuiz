{
  "name": "astroquiz-strapi",
  "private": true,
  "version": "0.1.0",
  "description": "AstroQuiz Strapi backend with API testing suite",
  "scripts": {
    "build": "strapi build",
    "develop": "strapi develop",
    "start": "strapi start",
    "strapi": "strapi",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest scripts/api.test.js",
    "test:performance": "jest scripts/performance.test.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@strapi/strapi": "4.25.9",
    "@strapi/plugin-users-permissions": "4.25.9",
    "@strapi/plugin-i18n": "4.25.9",
    "pg": "8.8.0",
    "axios": "^1.6.0"
  },
  "author": {
    "name": "AstroQuiz Team"
  },
  "strapi": {
    "uuid": "your-project-uuid"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x.x",
    "npm": ">=6.0.0"
  },
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/scripts/test-setup.js"],
    "testMatch": [
      "<rootDir>/scripts/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}