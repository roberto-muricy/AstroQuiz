{
  "name": "quiz-cms",
  "private": true,
  "version": "0.1.0",
  "description": "AstroQuiz Strapi CMS with comprehensive API testing suite",
  "scripts": {
    "build": "strapi build",
    "develop": "strapi develop",
    "start": "strapi start",
    "strapi": "strapi",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest scripts/api.test.js",
    "test:performance": "jest scripts/performance.test.js",
    "test:quiz": "jest scripts/quiz-engine.test.js",
    "test:all": "jest scripts/api.test.js scripts/performance.test.js scripts/quiz-engine.test.js",
    "railway:build": "NODE_ENV=production npm run build",
    "railway:start": "NODE_ENV=production npm run start",
    "postbuild": "echo 'Build completed successfully'",
    "health": "curl -f http://localhost:1337/api/health || exit 1",
    "generate-keys": "node scripts/generate-keys.js",
    "setup-env": "node scripts/generate-keys.js",
    "deploy:verify": "node scripts/verify-railway-deploy.js",
    "deploy:production-keys": "node scripts/generate-production-env.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@strapi/plugin-cloud": "5.23.0",
    "@strapi/plugin-users-permissions": "5.23.0",
    "@strapi/strapi": "5.23.0",
    "axios": "^1.6.0",
    "better-sqlite3": "11.3.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.1",
    "pg": "^8.11.0",
    "pg-connection-string": "^2.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "styled-components": "^6.1.19"
  },
  "author": {
    "name": "AstroQuiz Team"
  },
  "strapi": {
    "uuid": "your-project-uuid"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x.x",
    "npm": ">=6.0.0"
  },
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/test-setup.js"
    ],
    "testMatch": [
      "<rootDir>/scripts/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
