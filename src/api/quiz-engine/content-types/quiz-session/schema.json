{
  "kind": "collectionType",
  "collectionName": "quiz_sessions",
  "info": {
    "singularName": "quiz-session",
    "pluralName": "quiz-sessions",
    "displayName": "Quiz Session",
    "description": "Quiz game session data for persistent storage"
  },
  "options": {
    "draftAndPublish": false,
    "comment": "Stores quiz session state for resumability and analytics"
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "sessionId": {
      "type": "uid",
      "required": true,
      "unique": true
    },
    "userId": {
      "type": "string",
      "required": false,
      "description": "Optional user identifier"
    },
    "phaseNumber": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 50
    },
    "locale": {
      "type": "enumeration",
      "enum": ["en", "pt", "es", "fr"],
      "default": "en",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "paused", "completed", "abandoned", "expired"],
      "default": "active",
      "required": true
    },
    "currentQuestionIndex": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "questions": {
      "type": "json",
      "required": true,
      "description": "Array of questions for this session"
    },
    "answers": {
      "type": "json",
      "default": [],
      "description": "Array of submitted answers"
    },
    "score": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "streakCount": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "maxStreak": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "startTime": {
      "type": "datetime",
      "required": true
    },
    "currentQuestionStartTime": {
      "type": "datetime",
      "required": true
    },
    "totalTimeSpent": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "description": "Total time spent in milliseconds"
    },
    "phaseConfig": {
      "type": "json",
      "required": true,
      "description": "Phase configuration snapshot"
    },
    "timePerQuestion": {
      "type": "integer",
      "default": 30000,
      "min": 1000,
      "description": "Time allowed per question in milliseconds"
    },
    "isPaused": {
      "type": "boolean",
      "default": false
    },
    "pausedAt": {
      "type": "datetime",
      "required": false
    },
    "pauseDuration": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "description": "Total pause duration in milliseconds"
    },
    "completedAt": {
      "type": "datetime",
      "required": false
    },
    "abandonedAt": {
      "type": "datetime",
      "required": false
    },
    "phaseResult": {
      "type": "json",
      "required": false,
      "description": "Final phase completion results"
    },
    "userPreferences": {
      "type": "json",
      "default": {},
      "description": "User-specific preferences for this session"
    },
    "autoSaveEnabled": {
      "type": "boolean",
      "default": true
    },
    "lastAutoSave": {
      "type": "datetime",
      "required": false
    },
    "metadata": {
      "type": "json",
      "default": {},
      "description": "Additional session metadata for analytics"
    }
  }
}
